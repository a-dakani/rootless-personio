{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/jilleJr/rootless-personio/raw/main/personio.schema.json",
  "$ref": "#/$defs/config",
  "$defs": {
    "auth": {
      "properties": {
        "email": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "format": "email"
        },
        "password": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "config": {
      "properties": {
        "baseUrl": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "format": "uri"
        },
        "auth": {
          "$ref": "#/$defs/auth"
        },
        "output": {
          "$ref": "#/$defs/outFormat"
        },
        "log": {
          "$ref": "#/$defs/log"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "log": {
      "properties": {
        "format": {
          "$ref": "#/$defs/logFormat"
        },
        "level": {
          "$ref": "#/$defs/logLevel"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "logFormat": {
      "type": "string",
      "enum": [
        "pretty",
        "json"
      ],
      "title": "Logging format"
    },
    "logLevel": {
      "type": "string",
      "enum": [
        "trace",
        "debug",
        "info",
        "warn",
        "error",
        "fatal",
        "panic",
        "disabled"
      ],
      "title": "Logging level"
    },
    "outFormat": {
      "type": "string",
      "enum": [
        "pretty",
        "json",
        "yaml"
      ],
      "title": "Output format"
    }
  }
}